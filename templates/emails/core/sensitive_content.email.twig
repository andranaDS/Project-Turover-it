{% block config %}
    {% do email.addTextHeader('X-Mailjet-Campaign', 'sensitive_content') %}
{% endblock config %}

{% block subject %}
    {{ 'core.sensible_content.subject'|trans({}, 'emails', 'fr')|raw }}
{% endblock subject %}

{% block html %}
    {% embed "emails/base.html.twig" %}
        {% block content %}
            <row>
                <columns>
                    {% include 'emails/components/hello.html.twig' %}
                    <p>{{ 'core.sensible_content.content.paragraphs.0'|trans({}, 'emails')|nl2br }}</p>
                    <p>
                        <strong>{{ 'core.sensible_content.content.fields.type'|trans({}, 'emails')|nl2br }}
                            : </strong><br/>
                        {{ type }}
                    </p>
                    <p>
                        <strong>{{ 'core.sensible_content.content.fields.content'|trans({}, 'emails')|nl2br }}
                            : </strong><br/>
                        {{ content|raw }}
                    </p>

                    <spacer size="25"></spacer>

                    <center>
                        <button class="large radius"
                                href="https://quel-lien-doit-on-mettre.com/">
                            {{ 'core.sensible_content.content.button'|trans({}, 'emails')|nl2br }}
                        </button>
                    </center>

                    <spacer size="25"></spacer>

                </columns>
            </row>

            {% include 'emails/components/signature_bot.html.twig' %}
        {% endblock %}
    {% endembed %}
{% endblock html %}
